@{
    ViewData["Title"] = "Dashboard";
}

<h2 class="mb-4">Dashboard</h2>

<div class="row">
    <div class="col-md-3">
        <div class="card text-white bg-primary mb-3 shadow">
            <div class="card-body">
                <h5 class="card-title"><i class="fas fa-users me-2"></i>Total Employees</h5>
                <p class="card-text fs-4">120</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-white bg-success mb-3 shadow">
            <div class="card-body">
                <h5 class="card-title"><i class="fas fa-building me-2"></i>Departments</h5>
                <p class="card-text fs-4">6</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-white bg-warning mb-3 shadow">
            <div class="card-body">
                <h5 class="card-title"><i class="fas fa-calendar-check me-2"></i>Present Today</h5>
                <p class="card-text fs-4">98</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-white bg-danger mb-3 shadow">
            <div class="card-body">
                <h5 class="card-title"><i class="fas fa-user-clock me-2"></i>Absent Today</h5>
                <p class="card-text fs-4">22</p>
            </div>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-md-6">
        <div class="card shadow">
            <div class="card-header bg-light fw-bold">Recent Employees</div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item">John Doe - Developer</li>
                <li class="list-group-item">Jane Smith - HR</li>
                <li class="list-group-item">Sam Lee - Accountant</li>
            </ul>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card shadow">
            <div class="card-header bg-light fw-bold">Notices</div>
            <div class="card-body">
                <p>No official notices today.</p>
            </div>
        </div>
    </div>
</div>
